{% extends 'base.html.twig' %}

{% block title %} {{parent()}} Login
{% endblock %}

{% block body %}
		<div class="container">
			<div class="row justify-content-center">
	
				<form action="{{ path('login') }}" method="post" enctype="application/x-www-form-urlencoded">
					<fieldset>
						<legend>Connexion</legend>
						<div class="form-group row"></div>
						<div class="form-group">
							<label for="email">Adresse Mail *</label>
							<input class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Entrez votre email" type="email">
						</div>
						<div class="form-group">
							<label for="Password">Mot de passe *</label>
							<input class="form-control" id="Password" name="mdp" placeholder="Mot de passe" type="password">
						</div>
						
	
						<button type="submit" name="valider" class="btn btn-primary">Envoyer</button>
					</fieldset>
				</form>
			</div>
		</div>
{% endblock %}
